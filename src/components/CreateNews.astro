<div class="container mx-auto p-4 ">
    <h2 class="text-2xl font-bold mb-4">Create News Article</h2>

    <form id="newsForm" class="max-w-lg">
        <div class="mb-4">
            <label for="newsTitle" class="block text-gray-700">News Title:</label>
            <input type="text" id="newsTitle" name="newsTitle" required
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
        </div>

        <div class="mb-4">
            <label for="newsDescription" class="block text-gray-700">News Description:</label>
            <textarea id="newsDescription" name="newsDescription" rows="4" required
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500"></textarea>
        </div>

        <div class="mb-4">
            <label for="datePublished" class="block text-gray-700">Date Published:</label>
            <input type="date" id="datePublished" name="datePublished" required
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
        </div>

        <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600">Upload</button>
    </form>

    <!-- Container to hold news articles -->
    <div id="newsArticles" class="mt-8"></div>
</div>

