---
import {Button} from '@/components/ui/button';


interface Props {
    title: string;
    description: string;
    date_published: string;
}



          
---

<div class="container mx-auto p-4 m-10 bg-gray-100 border border-black rounded">
    <div class="container mx-auto p-10">
        <h2 class="text-2xl font-bold mb-4">Create News Article</h2>

        <form id="newsForm" class="max-w-lg">
            <div class="mb-4">
                <label for="newsTitle" class="block text-gray-700 font-bold">News Title:</label>
                <input type="text" id="newsTitle" name="newsTitle" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
            </div>
    
            <div class="mb-4">
                <label for="newsDescription" class="block text-gray-700 font-bold">News Description:</label>
                <textarea id="newsDescription" name="newsDescription" rows="4" required
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500"></textarea>
            </div>
    
            <div class="mb-4">
                <label for="datePublished" class="block text-gray-700 font-bold ">Date Published:</label>
                <input type="date" id="datePublished" name="datePublished" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
            </div>
    
            <div class="flex gap-4">
                <Button type="submit" id="uploadButton" className="bg-green-500 py-2 px-4 border border-black rounded-md hover:bg-green-600 active:transition-transform active:translate-y-1">Upload</Button>
                
            </div>
        </form>

    </div>


    <!-- Container to hold news articles -->
    
</div>

